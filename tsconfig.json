{
  "compilerOptions": {
    "strict": true,
    "lib": ["ES2022"],
    "module": "CommonJS",
    "target": "esnext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,

    // so that if your project isn't using TypeScript, it still has autocomplete
    "allowJs": true,
    "experimentalDecorators": true,
  }
}
